<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.jain.localdatabase.MainActivity">

    <TextView
        android:id="@+id/textViewEmpRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Employee Records\n"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextEmpId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Employee Id"
        android:singleLine="true"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextEmpName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Employee Name"
        android:singleLine="true"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextEmpAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Employee Address"
        android:singleLine="true"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextEmpSal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Employee Salary"
        android:singleLine="true"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonSaveRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="onButtonClick"
        android:text="Save Record"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonShowEmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="onButtonClick1"
        android:text="Show Emp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewTotalRecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Total Records: "
        android:textSize="20sp" />
</LinearLayout>
